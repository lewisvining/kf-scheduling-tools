{
    "manifest_version": 3,
    "name": "Kraken Field Tools",
    "version": "1.3",
    "description": "",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "clipboardWrite"
    ],
    "host_permissions": [
      "*://*/*" 
    ],
    "background": {
      "service_worker": "background.js" 
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}